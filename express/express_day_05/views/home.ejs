<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>LinkedIn Responsive Home</title>

<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family:Arial, Helvetica, sans-serif;
}

body{
  background:#f3f2ef;
}

/* ================= NAVBAR ================= */
.navbar{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:12px 6%;
  background:#fff;
  border-bottom:1px solid #ddd;
  position:sticky;
  top:0;
  z-index:1000;
}

.logo{
  font-size:22px;
  font-weight:bold;
  color:#0a66c2;
}

.nav-links{
  display:flex;
  gap:25px;
}

.nav-links a{
  text-decoration:none;
  color:#555;
  font-size:14px;
  font-weight:bold;
}

.nav-links a:hover{
  color:#0a66c2;
}

/* ================= HOME SECTION ================= */
.home{
  display:flex;
  justify-content:center;
  align-items:center;
  height:80vh;
  padding:20px;
  text-align:center;
}

.home-content{
  max-width:600px;
}

.home-content h1{
  font-size:36px;
  margin-bottom:20px;
  color:#0a66c2;
}

.home-content p{
  font-size:18px;
  margin-bottom:25px;
  color:#555;
}

.home-content button{
  padding:10px 20px;
  border:none;
  border-radius:25px;
  background:#0a66c2;
  color:#fff;
  font-size:16px;
  cursor:pointer;
}

.home-content button:hover{
  background:#004182;
}

/* ================= SIGNUP SECTION ================= */
.signup{
  display:flex;
  justify-content:center;
  align-items:center;
  padding:60px 20px;
  background:#fff;
}

.signup-box{
  width:350px;
  padding:25px;
  border-radius:10px;
  box-shadow:0 5px 15px rgba(0,0,0,0.1);
}

.signup-box h2{
  text-align:center;
  margin-bottom:20px;
  color:#0a66c2;
}

.signup-box input{
  width:100%;
  padding:10px;
  margin-bottom:15px;
  border-radius:6px;
  border:1px solid #ccc;
}

.signup-box input:focus{
  outline:none;
  border-color:#0a66c2;
}

.signup-box button{
  width:100%;
  padding:10px;
  border:none;
  border-radius:25px;
  background:#0a66c2;
  color:#fff;
  font-size:16px;
  cursor:pointer;
}

.signup-box button:hover{
  background:#004182;
}

/* ================= RESPONSIVE ================= */
@media(max-width:768px){
  .home-content h1{
    font-size:28px;
  }

  .signup-box{
    width:100%;
  }

  .nav-links{
    gap:15px;
  }
}
</style>
</head>

<body>

<!-- NAVBAR -->
<div class="navbar">
  <div class="logo">LinkedIn</div>
  <div class="nav-links">
    <a href="/home">Home</a>
    <a href="/signup">Sign Up</a>
  </div>
</div>

<!-- HOME SECTION -->
<section id="home" class="home">
  <div class="home-content">
    <h1>Welcome to LinkedIn</h1>
    <p>Connect with professionals. Grow your network. Build your career.</p>
    <a href="/signup">
      <button>Join Now</button>
    </a>
  </div>
</section>

<!-- SIGNUP SECTION -->
<section id="signup" class="signup">
  <div class="signup-box">
    <h2>Create Account</h2>
    <form>
      <input type="text" placeholder="Full Name" required>
      <input type="email" placeholder="Email Address" required>
      <input type="password" placeholder="Password" required>
      <button type="submit">Sign Up</button>
    </form>
  </div>
</section>

</body>
</html>
