<%- include("partials/navbar.ejs") %>

<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f4f6f9;
  }

  h1 {
    text-align: center;
    color: #4e73df;
    margin-top: 30px;
    margin-bottom: 20px;
  }

  /* Courses container */
  .courses-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
  }

  /* Individual course card */
  .course-card {
    background: white;
    border-radius: 15px;
    padding: 20px;
    width: 280px;
    box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    text-align: center;
  }

  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  .course-card h3 {
    color: #1cc88a;
    margin-bottom: 10px;
  }

  .course-card p {
    margin: 5px 0;
    font-size: 16px;
    color: #333;
  }

  .course-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 8px 16px;
    background: #4e73df;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    transition: background 0.3s;
  }

  .course-card a:hover {
    background: #1cc88a;
  }

  /* Responsive */
  @media(max-width: 700px) {
    .courses-container {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<h1>All Courses</h1>

<div class="courses-container">
  <% courses.forEach(course => { %>
    <div class="course-card">
      <h3><%= course.name %></h3>
      <p><strong>Duration:</strong> <%= course.duration %></p>
      <p><strong>Fees:</strong> â‚¹<%= course.fees %></p>
      <a href="/course/<%= course.id %>">View Details</a>
    </div>
  <% }) %>
</div>

